    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "node dist/src/index.js",
        "start:pm2": "pnpm pm2 start ecosystem.config.js",
        "dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "build": "rm -rf ./dist && tsc && tsc-alias",
        "lint": "eslint ./src --ext .ts",
        "lint:fix": "eslint ./src --ext .ts --fix",
        "format": "prettier --write .",
        "prepare": "husky",
        "db:migrate": "pnpm drizzle-kit migrate",
        "db:generate": "pnpm drizzle-kit generate",
        "db:studio": "pnpm drizzle-kit studio",
        "db:seed:dev": "ts-node scripts/seed.dev.ts",
        "db:seed:prod": "node -r tsconfig-paths/register dist/scripts/seed.prod.js",
        "db:reset": "ts-node scripts/resetDB.ts"
    },
    "keywords": [
        "bbp",
        "ballot-beyond-politics"
    ],
    "author": "Nowshad Islam",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/bcrypt": "^6.0.0",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.10.1",
        "@types/nodemailer": "^7.0.5",
        "drizzle-kit": "^0.31.7",
        "drizzle-seed": "^0.3.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "pm2": "^6.0.14",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.47.0"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "imagekit": "^6.0.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "mysql2": "^3.15.3",
        "nanoid": "^5.1.6",
        "nodemailer": "^7.0.12",
        "rate-limiter-flexible": "^9.1.0",
        "redis": "^5.10.0",
        "sharp": "^0.34.5",
        "uuid": "^13.0.0",
        "winston": "^3.18.3",
        "zod": "^4.1.12"
    },
    "lint-staged": {
        "./src/**/*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
